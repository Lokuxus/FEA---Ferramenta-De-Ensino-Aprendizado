@model FEA.Models.UsuarioViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!--  Configuração do site -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <title>@ViewBag.Title - FEA - Ferramenta Estudo Analitico</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <!-- TEMAS DA PAGINA -->
    <link rel="stylesheet" href="~/Content/CSS/FEA.css" />
    <!-- iCheck - O modelos dos Chekbox-->
    <link rel="stylesheet" href="~/Content/Plugins/Check/square/blue.css" />
    <!-- SCRIPTS  -->
    <!-- jQuery 2.2.3 -->
    <script src="~/Scripts/JQuery/jquery-2.2.3.min.js"></script>
    <!-- Bootstrap 3.3.6 -->
    <script src="~/Scripts/bootstrap.min.js"></script>
    <!-- iCheck -->
    <script src="~/Content/Plugins/Check/icheck.min.js"></script>
</head>
<body class="corpo_pagina pg_login">
    <div class="login-box">
        <div class="login-logo">
            <a href="Home.html"><b>FEA</b>Versão 1.0.00_BETA</a>
        </div>
        <!-- /.login-logo -->
        <div class="login-box-body">
            <p class="login-box-msg">Faça o Login para iniciar sessão</p>

            <form action="@Url.Action("", "")" method="post">
                <div class="form-group has-feedback">
                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control", placeholder = "E-mail" , type = "email" })
                    @Html.ValidationMessageFor(x => x.Email)
                    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                </div>
                
                <div class="form-group has-feedback">
                    @Html.PasswordFor(x => x.Senha, new { @class = "form-control", placeholder = "Password" })
                    @Html.ValidationMessageFor(x => x.Senha)
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                <div class="row">
                    <div class="col-xs-8">
                        <div class="checkbox icheck">
                            <label>
                                <input type="checkbox"> Lembrar Senha
                            </label>
                        </div>
                    </div>
                    <!-- /.col -->
                    <div class="col-xs-4">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">Login</button>
                    </div>
                    <!-- /.col -->
                </div>
            </form>

            <a href="#">Esqueceu sua Senha</a><br>
            <a href="register.html" class="text-center">Registra novo membro</a>

        </div>
        <!-- /.login-box-body -->
    </div>
    <!-- /.login-box -->
    <script>
    $(function () {
        $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
            radioClass: 'iradio_square-blue',
            increaseArea: '20%' // optional
        });
            });
    </script>

    <script src="@Url.Content("~/Scripts/jquery.validate.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")"></script>

</body>
</html>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}