
@model FEA.Models.CadastroArvoreViewModel
@{
    ViewBag.Title = "CadastroArvore";
}

<h2>@ViewBag.Title.</h2>
<a href="@Url.Action("Arvores" , "Arvore")"><button type="button" class="btn-sm btn-danger">Cancelar</button></a>
@using (Html.BeginForm("CadastroArvore", "Arvore", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Criar Nova Arvore.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Nome, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Nome, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Materia, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Materia, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Cadastrar" />
        </div>
    </div>
}