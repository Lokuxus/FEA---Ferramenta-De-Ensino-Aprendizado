
@model FEA.Models.CadastroArvoreViewModel
@{
    ViewBag.Title = "CadastroArvore";
}

<

<section class="content-header">
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Forms</a></li>
        <li class="active">General Elements</li>
    </ol>
</section>


<section class="box box-warning">
    <div class="box-header with-border">
        <h3 class="box-title">Cadastro de Diciplinas</h3>
    </div>
    <!-- /.box-header -->


    <div class="box-body">
        @using (Html.BeginForm("SalvaCadastroArvore", "Arvore", FormMethod.Post, new { @class = "form-group", @role = "form" }))
            {
            @Html.AntiForgeryToken()
            <!-- Informa a Materia -->
                <div class="form-group">
                    <label>Materia</label>
                    @Html.TextBoxFor(m => m.materia, new { @class = "form-control" , @placeholder = "Materia" })
                </div>

                <!-- Informação Turma -->
                <div class="form-group">
                    <label>Turma</label>
                    @Html.TextBoxFor(m => m.turma, new { @class = "form-control", @placeholder = "Questão" })
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary" value="CadastroArvore">Salvar</button>
                </div>
                //@Url.Action("Arvores", "Arvore")
        }
    </div>

    <!-- /.box-body -->

</section>