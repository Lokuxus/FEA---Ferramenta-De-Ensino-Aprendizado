
@model FEA.Models.CadastroArvoreViewModel
@{
    ViewBag.Title = "CadastroArvore";
}

<

<section class="content-header">
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Forms</a></li>
        <li class="active">General Elements</li>
    </ol>
</section>


<section class="box box-warning">
    <div class="box-header with-border">
        <h3 class="box-title">Cadastro de Questões</h3>
    </div>
    <!-- /.box-header -->


    <div class="box-body">
        @using (Html.BeginForm("CadastroArvore", "Arvore", FormMethod.Post, new { @class = "form-group", @role = "form" }))
            {
            @Html.AntiForgeryToken()
                <!-- Questao input -->
            <div>
                <label>Questao</label> &nbsp &nbsp @Html.LabelFor(m => m.materia)
            </div>
                <div class="form-group">
                    <label>Text</label>
                    @Html.TextAreaFor(m => m.materia, new { @class = "form-control", @rows = "3", @placeholder = "Questao.." })
                </div>

                <!-- textarea -->
                <div class="form-group">
                    <label>Textarea</label>
                    @Html.TextBoxFor(m => m.turma, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <a href="#"><button type="button" class="btn btn-primary">Salvar</button></a>
                </div>
                //@Url.Action("Arvores", "Arvore")
        }
    </div>

    <!-- /.box-body -->

</section>