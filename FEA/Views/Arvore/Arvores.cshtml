@model System.Data.DataSet
@{
    ViewBag.Title = "Arvores";
}
<div class="content">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Arvores
        </h1>
        <ol class="breadcrumb">
            <a href="@Url.Action("CadastroArvore" , "Arvore")"><button type="button" class="btn-sm btn-danger">Nova Arvore</button></a>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <!-- /.box-header -->
                    <div class="box-body">
                        <table id="example2" class="table table-bordered table-hover">
                            
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Materias</th>
                                    <th>Turmas</th>
                                    <th>Editar</th>
                                    <th>Deletar</th>
                                </tr>
                            </thead>
                            <tbody>    
                            @foreach (System.Data.DataRow linha in Model.Tables[0].Rows)
                            {
                                <tr>
                                    <th>
                                            @linha["Id"].ToString()
                                    </th>
                                    <th>
                                            @linha["Diciplina"].ToString()
                                    </th>
                                    <th>
                                            @linha["Turma"].ToString()
                                    </th>
                                    <td>
                                       <a href="#"><button type="button" class="btn btn-info">Editar</button></a> 
                                    </td>
                                    <td>
                                        <a href=@Url.Action("DeletaMateria", new { idMateria = linha["Id"].ToString() }) ><button type="button" class="btn btn-adn">Excluir</button></a>
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div> 
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>